    <corners
        android:radius="10dp"
        />

    <gradient
        android:angle="90"
        android:centerX="30%"
        android:centerColor="#ff5989ff"
        android:startColor= "#ffa0e6f8"
        android:endColor="#ff5fffcc"
        android:type="linear"
        />

    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <stroke
        android:width="5dp"
        android:color="#ffb6fff3"
        />
</shape>